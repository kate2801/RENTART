{% extends 'admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-3">Категории</h1>

        <a class="btn btn-lg btn-primary mx-auto my-5 d-block w-25" href="{{ path('category_new') }}">Создать новую</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Наименование</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    {% if category.isActive%}
                        <td class="text-success">Активна</td>
                    {% else %}
                        <td class="text-danger">Выключена</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">Редактировать</a>
                        <br>
                        {% if category.isActive%}
                            <a href="{{ path('category_change', {'id': category.id}) }}" class="text-danger">Выключить</a>
                        {% else %}
                            <a href="{{ path('category_change', {'id': category.id}) }}" class="text-success">Включить</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
