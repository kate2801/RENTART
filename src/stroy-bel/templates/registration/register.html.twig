{% extends 'login.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="ftco-section">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container mt-5">
        <h1  class="h1 mb-3 font-weight-normal text-center">Регистрация</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control rounded-left'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                'attr': {'class': 'form-control rounded-left'}
            }) }}
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input d-inline-block'}, 'labele': 'Я согласен'}) }}
            <div class="text-center">Есть аккаунт? <a href="{{ path('app_login') }}"><b>Авторизироваться</b></a></div>
            <button type="submit" class="btn btn-lg btn-primary mx-auto mt-5 d-block">Зарегистрироваться</button>

        {{ form_end(registrationForm) }}
    </div>
</section>
{% endblock %}
