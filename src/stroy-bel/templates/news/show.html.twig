{% extends 'main.addition.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="../build/app.4c45a463.css">
    <link rel="stylesheet" href="../css/config.css">
    <!-- All css files are included here. -->
    <!-- Bootstrap fremwork main css -->
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <!-- Owl Carousel main css -->
    <link rel="stylesheet" href="../css/owl.carousel.min.css">
    <link rel="stylesheet" href="../css/owl.theme.default.min.css">
    <!-- This core.css file contents all plugings css file. -->
    <link rel="stylesheet" href="../css/core.css">
    <!-- Theme shortcodes/elements style -->
    <link rel="stylesheet" href="../css/shortcode/shortcodes.css">
    <!-- Theme main style -->
    <link rel="stylesheet" href="../css/style.css">
    <!-- Responsive css -->
    <link rel="stylesheet" href="../css/responsive.css">
    <!-- User style -->
    <link rel="stylesheet" href="../css/custom.css">
    <link rel="stylesheet" href="../css/news.css">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="blog-details-top">
            <!--Start Blog Thumb -->
            <div class="blog-details-thumb-wrap">
                <div class="blog-details-thumb">
                    <img src="../{{ news.image }}" alt="blog images">
                </div>
            </div>
            <!--End Blog Thumb -->

            <h1 class="h1 my-3">{{ news.title }}</h1>
            <span class="text-muted">{{ news.date|date('d-M-Y H:i:s') }}</span>
            <div class="blog-admin-and-comment">
            </div>
            <!-- Start Blog Pra -->
            <div class="blog-details-pra">
                <p>{{ news.body | raw }}</p>
            </div>
            <!-- End Blog Pra -->

        </div>
    </div>
{% endblock %}
